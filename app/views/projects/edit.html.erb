          <%= p.text_area :description, placeholder: "Overview" %>
        </div>


        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1"></span>
          <!-- <input type="text" class="form-control" placeholder="Problem" aria-describedby="basic-addon1"> -->
          <%= p.text_area :problem, placeholder: "The Problem i.e. People need to get from point A to B, fast" %>
        </div>


        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1"></span>
          <!-- <input type="text" class="form-control" placeholder="Solution" aria-describedby="basic-addon1"> -->
          <%= p.text_area :solution, placeholder: "Your Solution i.e. A service that allows you to call a car from your phone" %>
        </div>


        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1"></span>
