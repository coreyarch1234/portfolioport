<div>
    <%= form_for(@project) do |p| %>
    <div>
        <%= p.text_field :title, placeholder: "Title" %>
        <hr>
        <%= p.text_field :github, placeholder: "GitHub Link" %>
        <hr>
        <%= p.text_area :description, placeholder: "Overview" %>
        <hr>
        <%= p.text_area :problem, placeholder: "The Problem" %>
        <hr>
        <%= p.text_area :solution, placeholder: "Your Solution" %>
        <hr>
        <%= p.text_area :features, placeholder: "Features" %>
        <hr>
        <%= p.text_field :technology, placeholder: "Technologies" %>
        <div>
            <%= p.submit "Submit"%>
        </div>
    </div>
    <% end %>
</div>
